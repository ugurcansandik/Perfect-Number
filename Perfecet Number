#include <iostream>
#include <cmath>

using namespace std;

main() {
	
	int number,temp,result=0;
	
	printf("Please enter a number.\n"); scanf("%d",&number);
	
	for(temp=1;temp<number;temp++){
		if((number%temp)==0)
			result+=temp;
	}
	if(result==number)
		printf("Number is a perfect number.\n");
	else
		printf("Number is not a perfect number.");

	return 0;
}
